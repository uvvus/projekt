<Window x:Class="WpfApp1.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj ucznia" Height="500" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="PESEL:" />
                <TextBox x:Name="PESELBox" Margin="0,5"/>

                <TextBlock Text="Imię:" />
                <TextBox x:Name="NameBox" Margin="0,5"/>

                <TextBlock Text="Drugie imię:" />
                <TextBox x:Name="SecNameBox" Margin="0,5"/>

                <TextBlock Text="Nazwisko:" />
                <TextBox x:Name="SurnameBox" Margin="0,5"/>

                <TextBlock Text="Data urodzenia:" />
                <TextBox x:Name="DateBox" Margin="0,5"/>

                <TextBlock Text="Numer telefonu:" />
                <TextBox x:Name="PhoneBox" Margin="0,5"/>

                <TextBlock Text="Adres zamieszkania:" />
                <TextBox x:Name="AddressBox" Margin="0,5"/>

                <TextBlock Text="Miejscowość:" />
                <TextBox x:Name="CityBox" Margin="0,5"/>

                <TextBlock Text="Kod pocztowy:" />
                <TextBox x:Name="PostalBox" Margin="0,5"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Anuluj" Width="80" Margin="5,0" Click="CancelButton_Click"/>
            <Button Content="Dodaj" Width="80" Margin="5,0" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
